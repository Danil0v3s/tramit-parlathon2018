<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>

        <item name="fontFamily">@font/cc_circular_std_book</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="TramitActivity" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#8EA2FF</item>
    </style>

    <style name="DetailActivity" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="Rushmore.Toolbar.Transparent" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorControlNormal">@color/colorPureWhite</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Rushmore.Toolbar.Dark" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorFontHeading</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout.Error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorFontHeading</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <!--<item name="android:fontFamily">@font/sf_pro_text_medium</item>-->
        <item name="android:background">@color/colorFontHeading</item>
    </style>

    <style name="EditTextBottomSheet">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PrimaryAccent">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="VerMaisText">
        <!--<item name="android:layout_centerVertical">true</item>-->
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">53dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:text">@string/label_ver_mais</item>
        <item name="android:textColor">@color/colorFontLink</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HeadingText">
        <!--<item name="android:layout_centerVertical">true</item>-->
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/colorFontHeading</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:fontFamily">@font/cc_circular_std_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="SubtitleText">
        <!--<item name="android:layout_centerVertical">true</item>-->
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/colorFontHeading</item>
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:fontFamily">@font/cc_circular_std_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="NormalText">
        <!--<item name="android:layout_centerVertical">true</item>-->
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/colorFontHeading</item>
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:fontFamily">@font/cc_circular_std_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

</resources>
