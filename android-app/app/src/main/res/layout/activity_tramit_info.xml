<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activity_info_tramitacao"
    android:orientation="vertical"
    tools:context=".view.activities.TramitInfoActivity">

    <include layout="@layout/toolbar_clear" />

    <android.support.v4.view.ViewPager
        android:id="@+id/tramitInfoViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tramitInfoTabLayout"
        android:layout_below="@+id/toolbar"
        tools:ignore="UnknownIdInLayout" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tramitInfoTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        app:tabBackground="@drawable/circle_tab_indicator"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

</RelativeLayout>